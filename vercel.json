{
  "rewrites": [
    {
      "source": "/sprites/:id*",
      "destination": "https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/:id*"
    }
  ],
  "headers": [
    {
      "source": "/sprites/(.*).png",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; img-src *; script-src 'self' nuzlocke-analytics.vercel.app nuzlocke.vercel.app;"
        }
      ]
    }
  ]
}
